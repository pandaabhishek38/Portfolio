generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          Int    @id @default(autoincrement())
  title       String
  stack       String
  github      String
  description String
}

model Experience {
  id          Int     @id @default(autoincrement())
  company     String
  role        String
  period      String
  location    String
  description String  // âœ… New field instead of bullet points
}


model ContactItem {
  id     Int    @id @default(autoincrement())
  label  String
  value  String
  url    String?
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model AboutSummary {
  id      Int    @id @default(autoincrement())
  content String
}

model Education {
  id         Int    @id @default(autoincrement())
  university String
  degree     String
  fromYear   Int
  toYear     Int
  major      String
  courses    String? // Optional: Comma-separated or JSON string
}

model Skill {
  id   Int    @id @default(autoincrement())
  name String
  type String // e.g., Language, Framework, Tool
}


